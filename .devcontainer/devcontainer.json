{
  "name": "Vite AI Studio App",
  "build": {
    "dockerfile": "../Dockerfile", // Dockerfileのパス
    "target": "development"    // Dockerfile内のビルドステージ名を指定
    // "context": "..", // Dockerfileのビルドコンテキスト (Dockerfileからの相対パス) デフォルトはdevcontainer.jsonのあるフォルダ
    // "args": { // DockerfileのARGに渡すビルド引数
    //   "VARIANT": "22"
    // }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "vite.vscode-vite",
        "github.copilot",
        "eamodio.gitlens"
      ]
    }
  },
  "forwardPorts": [
    5173
  ],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "openPreview"
    }
  },
  "postCreateCommand": "sh .devcontainer/post-create.sh",
  "postAttachCommand": "echo 'Welcome! Configure .env if needed, then run: npm run dev'",
  "remoteUser": "node",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
